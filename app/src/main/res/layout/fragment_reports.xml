<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reports_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="2.5dp"
    android:paddingRight="2.5dp"
    android:orientation="vertical"
    tools:context=".ui.reports.ReportsFragment">

    <TextView
        android:id="@+id/sortBy"
        android:layout_width="380dp"
        android:layout_height="33dp"
        android:layout_margin="15dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/rounded_light_maroon_textview"
        android:drawableRight="@drawable/baseline_sort_white_24dp"
        android:drawablePadding="5.0dp"
        android:paddingLeft="20dp"
        android:paddingTop="2.5dp"
        android:paddingRight="20dp"
        android:paddingBottom="2dp"
        android:text="Sort by: recently completed"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="39dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/recentReport"
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_teal_textview"
            android:paddingLeft="10dp"
            android:paddingTop="1.0dp"
            android:paddingBottom="1.0dp"
            android:text="<temporarily blank>"
            android:textColor="@color/navyGreen"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>


