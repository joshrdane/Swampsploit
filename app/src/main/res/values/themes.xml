<resources>
    <!-- Base application theme. -->
    <style name="Theme.Swampsploit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dustyRed</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/offWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkTeal</item>
        <item name="colorSecondaryVariant">@color/navyGreen</item>
        <item name="colorOnSecondary">@color/offWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Swampsploit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Swampsploit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Swampsploit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>